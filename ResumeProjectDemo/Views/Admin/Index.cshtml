
@{
    Layout = null;
}
<!DOCTYPE html>

<html class="dark" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Developer Portfolio Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
          darkMode: "class",
          theme: {
            extend: {
              colors: {
                "primary": "#13daec",
                "background-light": "#f6f8f8",
                "background-dark": "#102022",
                "surface-dark": "#192f31",
                "border-dark": "#234548"
              },
              fontFamily: {
                "display": ["Inter", "sans-serif"]
              },
              borderRadius: {"DEFAULT": "0.25rem", "lg": "0.5rem", "xl": "0.75rem", "full": "9999px"},
            },
          },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

        .active-nav {
            background-color: #234548;
            border-left: 3px solid #13daec;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-slate-900 dark:text-white min-h-screen">
    <div class="flex min-h-screen">
        <!-- Sidebar Navigation -->
        <aside class="w-64 bg-background-light dark:bg-background-dark border-r border-slate-200 dark:border-border-dark flex flex-col fixed h-full z-50">
            <div class="p-6 flex items-center gap-3">
                <div class="bg-primary/20 p-2 rounded-lg">
                    <span class="material-symbols-outlined text-primary">terminal</span>
                </div>
                <div class="flex flex-col">
                    <h1 class="text-sm font-bold tracking-tight">DEV_ADMIN</h1>
                    <p class="text-[10px] text-slate-500 dark:text-[#92c5c9] uppercase tracking-widest font-semibold">v2.0.4</p>
                </div>
            </div>
            <nav class="flex-1 px-4 py-4 space-y-1 overflow-y-auto">
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group">
                    <span class="material-symbols-outlined group-hover:text-primary">dashboard</span>
                    <span class="text-sm font-medium">Dashboard</span>
                </div>
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group">
                    <span class="material-symbols-outlined group-hover:text-primary">person</span>
                    <span class="text-sm font-medium">About Me</span>
                </div>
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group">
                    <span class="material-symbols-outlined group-hover:text-primary">handyman</span>
                    <span class="text-sm font-medium">Skills</span>
                </div>
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group">
                    <span class="material-symbols-outlined group-hover:text-primary">work</span>
                    <span class="text-sm font-medium">Experience</span>
                </div>
                <div class="active-nav flex items-center gap-3 px-3 py-2.5 rounded-lg text-primary transition-colors cursor-pointer">
                    <span class="material-symbols-outlined fill-1">folder_open</span>
                    <span class="text-sm font-medium text-white">Projects</span>
                </div>
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group">
                    <span class="material-symbols-outlined group-hover:text-primary">school</span>
                    <span class="text-sm font-medium">Education</span>
                </div>
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group">
                    <span class="material-symbols-outlined group-hover:text-primary">workspace_premium</span>
                    <span class="text-sm font-medium">Certificates</span>
                </div>
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group text-slate-400">
                    <span class="material-symbols-outlined group-hover:text-primary">article</span>
                    <span class="text-sm font-medium">Blog</span>
                </div>
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group">
                    <span class="material-symbols-outlined group-hover:text-primary">mail</span>
                    <span class="text-sm font-medium">Messages</span>
                </div>
                <div class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-slate-600 dark:text-[#92c5c9] hover:bg-slate-100 dark:hover:bg-surface-dark transition-colors cursor-pointer group">
                    <span class="material-symbols-outlined group-hover:text-primary">settings</span>
                    <span class="text-sm font-medium">Settings</span>
                </div>
            </nav>
            <div class="p-4 mt-auto border-t border-slate-200 dark:border-border-dark">
                <div class="flex items-center gap-3 px-3 py-2 rounded-lg text-red-400 hover:bg-red-400/10 transition-colors cursor-pointer">
                    <span class="material-symbols-outlined">logout</span>
                    <span class="text-sm font-medium">Sign Out</span>
                </div>
            </div>
        </aside>
        <!-- Main Content -->
        <main class="flex-1 ml-64 flex flex-col bg-background-light dark:bg-background-dark">
            <!-- Top Navbar -->
            <header class="h-16 flex items-center justify-between px-8 border-b border-slate-200 dark:border-border-dark sticky top-0 bg-background-light/80 dark:bg-background-dark/80 backdrop-blur-md z-40">
                <div class="flex items-center gap-2">
                    <h2 class="text-sm font-semibold tracking-wide text-slate-500 dark:text-[#92c5c9] uppercase">Developer Admin Panel</h2>
                </div>
                <div class="flex items-center gap-6">
                    <div class="relative group cursor-pointer">
                        <span class="material-symbols-outlined text-slate-500 dark:text-[#92c5c9]">notifications</span>
                        <span class="absolute top-0 right-0 h-2 w-2 bg-primary rounded-full ring-2 ring-background-light dark:ring-background-dark"></span>
                    </div>
                    <div class="flex items-center gap-3 pl-6 border-l border-slate-200 dark:border-border-dark">
                        <div class="text-right">
                            <p class="text-xs font-bold leading-none">Alex Rivers</p>
                            <p class="text-[10px] text-slate-500 dark:text-[#92c5c9] mt-1 font-medium">Senior .NET Developer</p>
                        </div>
                        <div class="h-9 w-9 rounded-full bg-cover bg-center border border-primary/30" data-alt="User profile picture of a male software engineer" style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuBI3iUUgGBXYOPOkkwIpqt1oPLJ1T5VCOTxqFKhHEJXs929e-YXLs82PifBuXCBcgveCvVhztp9fOH8J2ID21G1Sq36Tqj8QteLq1PWGG4zBCRLDxTYtct2-y2Ix0hLpO87RTyx08Ebv3RkKtxJthG29DV_R5jblChBMPWOh9qOI9jbBhcoRmsHAE-bjguQERSGkbaGJMYk0p0Neh4650aVaonEcRfe6CsvP8e35ZabgA1tD6SsiSa3Dw1CCFvBfTqIgfFmor0UGIwF')"></div>
                    </div>
                </div>
            </header>
            <div class="p-8 max-w-7xl mx-auto w-full">
                @RenderBody()    
            </div>
        </main>
    </div>
</body>
</html>